<h1>Import Users from CSV file</h1>
<%= flash[:notice] %>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>first_name</th>
      <th>last_name</th>
      <th>email_address</th>
      <th>reporting_to_email_address</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email_address %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<h3>Import a CSV File</h3>
  <%= form_tag '/users/import', multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>
